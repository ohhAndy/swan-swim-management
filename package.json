{
  "packageManager": "npm@10.8.3",
  "name": "schoolcrm",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "db:generate": "npm --prefix packages/db run generate",
    "db:migrate": "npm --prefix packages/db run migrate:dev",
    "db:studio": "npm --prefix packages/db run studio",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "turbo": "^2.5.6",
    "typescript": "^5.0.0"
  },
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "zod": "^4.1.5"
  }
}
